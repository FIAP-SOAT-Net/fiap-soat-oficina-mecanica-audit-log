# =============================================================================
# SMART MECHANICAL WORKSHOP - AUDIT LOG - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
ASPNETCORE_ENVIRONMENT=Development
LOG_LEVEL=Information

# -----------------------------------------------------------------------------
# Docker Hub Configuration (for production docker-compose.yml)
# -----------------------------------------------------------------------------
# Your Docker Hub username for pulling/pushing images
DOCKERHUB_USERNAME=your-dockerhub-username
# Image tag to use (e.g., latest, v1.0.0, develop)
IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
# MongoDB root user credentials
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=example
# Database name for audit logs
MONGO_DATABASE=AuditLog
# Collection name for storing events
MONGO_COLLECTION=Events
# MongoDB port (default: 27017)
MONGO_PORT=27017

# -----------------------------------------------------------------------------
# RabbitMQ Configuration
# -----------------------------------------------------------------------------
# RabbitMQ user credentials
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
# Exchange name for database events
RABBITMQ_EXCHANGE_NAME=database.events.exchange
# Queue name for consuming events
RABBITMQ_QUEUE_NAME=database.events

# -----------------------------------------------------------------------------
# New Relic APM (Optional - Application Performance Monitoring)
# -----------------------------------------------------------------------------
# Enable/disable New Relic monitoring
NEW_RELIC_ENABLED=false
# New Relic license key (get from New Relic dashboard)
NEW_RELIC_LICENSE_KEY=
# Application name as it will appear in New Relic
NEW_RELIC_APP_NAME=smart-mechanical-workshop-audit-log-worker
